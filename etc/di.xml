<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="PayEx\Payments\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="PayEx\Payments\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">payexLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">PayEx\Payments\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\PaymentInformationManagement">
        <plugin name="beforeSavePaymentInformationAndPlaceOrder" type="PayEx\Payments\Plugin\PaymentInformationManagement" />
    </type>
    <type name="Magento\Checkout\Model\GuestPaymentInformationManagement">
        <plugin name="beforeSavePaymentInformationAndPlaceOrderGuest" type="PayEx\Payments\Plugin\GuestPaymentInformationManagement" />
    </type>
    <preference for="PayEx\Payments\Api\ServiceInterface" type="PayEx\Payments\Model\Service" />
</config>